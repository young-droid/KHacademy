$(document).ready(function () {
  function bannerChange(response) {
    if(response.banner) {
      $('.exp-banner').attr('src', response.banner);
    }
  }
  function navChange(response) {
    if (response.nav) {
      $('.trailerNav').text(response.nav.trailer);
      $('.screenshotsNav').text(response.nav.screenshots);
      $('.storyNav').text(response.nav.story);
      $('.characterNav').text(response.nav.characters);
      $('.purchaseNav').text(response.nav.purchase);

      //Section Headers
      $('#trailer .section-header').text(response.nav.trailer);
      $('#trailer .section-header').attr('data-text', response.nav.trailer);
      $('#screenshots .section-header').text(response.nav.screenshots);
      $('#screenshots .section-header').attr(
        'data-text',
        response.nav.screenshots
      );
      $('#characters .section-header').text(response.nav.characters);
      $('#characters .section-header').attr(
        'data-text',
        response.nav.characters
      );
      $('#purchase .section-header').text(response.purchase.header);
      $('#purchase .section-header').attr(
        'data-text',
        response.purchase.header
      );
    }
  }
  function heroChange(response) {
    if (response.hero) {
      $('.heroCta').text(response.hero.cta);
    }
  }
  function storyChange(response) {
    if (response.story) {
      $('#story .textbox-header.story').text(response.story.header);
      $('#story .textbox-header.story').attr(
        'data-text',
        response.story.header
      );
      $('#story .story1').text(response.story.story1);
      $('#story .story2').text(response.story.story2);
    }
  }
  function featuresChange(response) {
    if (response.features) {
      $('#story .textbox-header.keyfeatures').text(response.features.header);
      $('#story .textbox-header.keyfeatures').attr(
        'data-text',
        response.features.header
      );
      $('#story .features1').text(response.features.features1);
      $('#story .features2').text(response.features.features2);
      $('#story .features3').text(response.features.features3);
      $('#story .features4').text(response.features.features4);
    }
  }

  function purchaseChange(response) {
    if (response.purchase) {
      $('.versionSelect h2').text(response.purchase.selectVersion);
      $('.versionSelectButtons #digital').text(response.purchase.digital);
      $('.versionSelectButtons #physical').text(response.purchase.physical);
      $('.platformSelect h2').text(response.purchase.selectPlatform);
      $('.digitalSelect h2').text(response.purchase.selectDigital);
      $('.retailSelect h2').text(response.purchase.selectRetailer);
      $('#physicalBuy button').text(response.purchase.buyButton);
      $('#premium button').text(response.purchase.premium);
      $('#deluxe button').text(response.purchase.deluxe);
      $('#standard button').text(response.purchase.digitalStandard);
      $('.premium.gridLabel').text(response.purchase.premium);
      $('.deluxe.gridLabel').text(response.purchase.deluxe);
      $('.digital-standard.gridLabel').text(response.purchase.digitalStandard);
      $('.special.gridLabel').text(response.purchase.special);
      $('.physical-standard.gridLabel').text(
        response.purchase.physicalStandard
      );
      // $('.glamShotPhysical img').attr(
      //   'src',
      //   './media/img/purchase/' + response.purchase.glamshot
      // );
      // $('.glamShotDigital .deluxe').attr(
      //   'src',
      //   './media/img/purchase/' + response.purchase.glamshotDeluxe
      // );
      $('.glamShotDigital .premium').attr(
        'src',
        './media/img/purchase/' + response.purchase.glamshotPremium
      );
      $('.coming-soon').text(response.purchase.comingSoon);
    }
  }

  function footerChange(response) {
    if (response.footer) {
      $('.ratingsIcon').attr(
        'src',
        './media/img/ratings/' + response.footer.rating
      );
      $('.copy').html(response.footer.copy);
      $('.connect').text(response.footer.connect);
      $('.cookie').text(response.footer.cookie);
      $('.privacy').text(response.footer.privacy);
      $('.cookie').attr("href", response.footerLinks.cookie);
      $('.privacy').attr("href", response.footerLinks.privacy);
      $(".privacyChoices").attr("href", response.footerLinks.privacyChoices);
      $(".privacyCalifornia").attr("href", response.footerLinks.privacyCalifornia);
    }
  }

  (function () {
    let language = 'en';
    if (Cookies.get('lang')) {
      language = Cookies.get('lang');
    }

    if (language === 'en') {
      $('.esrbCert').css('display', 'inline');
      $('.esrbContainer').css('display', 'block');
    } else {
      $('.esrbCert').css('display', 'none');
      $('.esrbContainer').css('display', 'none');
    }
    let data = translations[language];
    bannerChange(data);
    navChange(data);
    heroChange(data);
    storyChange(data);
    featuresChange(data);
    purchaseChange(data);
    footerChange(data);
  })();
});
