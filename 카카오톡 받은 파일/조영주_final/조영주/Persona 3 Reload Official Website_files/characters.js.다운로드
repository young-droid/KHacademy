const charaTag = '.splide__list__character';

const charaSSHTML =
  '<a href="" data-fancybox="characters"><img class="gtm__charaScreenShotImg" src="" alt="" /></a>';

$(document).ready(function () {
  //checks to see if template tags are supported
  if ('content' in document.createElement('template')) {
    const charatemplate = document.querySelector('#characterTemplateSplide');

    let lang = Cookies.get('lang').toLowerCase();

    if (lang === 'us' || lang === 'uk' || lang === 'au') {
      lang = 'en';
    }

    //screenshots
    for (let character of characters) {
      //clone the template code
      let clone = charatemplate.content.cloneNode(true);
      let charaCar = clone.querySelector('.character-slide');
      if (typeof character.name === 'object') {
        charaCar.querySelector('h2').innerHTML = character.name[lang];
      } else {
        charaCar.querySelector('h2').innerHTML = character.name;
      }
      charaCar.querySelector('p').innerHTML = character.description[lang];
      charaCar
        .querySelector('.character-portrait > img')
        .setAttribute('src', chara_path + character.portrait);

      let ssContainer = charaCar.querySelector('.character-screenshots');
      for (let ss of character.screenshots) {
        let newSS = document.createElement('a');
        newSS.href =
          chara_ss_path + character.screenshots_path + ss + '_lg.jpg';
        newSS.setAttribute('data-fancybox', 'characters');
        let newSSThumb = document.createElement('img');
        newSSThumb.src =
          chara_ss_path +
          character.screenshots_path +
          chara_ss_thumb_path +
          ss +
          '.jpg';
        newSSThumb.classList.add('gtm__charaScreenShotImg');
        newSS.append(newSSThumb);
        ssContainer.append(newSS);
      }

      document.querySelector(charaTag).append(charaCar);
    }
  } else {
    console.log('template not supported');
  }

  let charaSplide = new Splide('.character-splide', {
    type: 'loop',
    pagination: false,
    perPage: 1,
    focus: 'center',
    padding: '0',
    drag: false,
  }).mount();
});
